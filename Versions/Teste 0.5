<!DOCTYPE html>
<html>
<head>
	<title>SapoClicker by ToddynArchive on Github</title>
	<style>
		#clicks {
			color: black;
			font-size: 24px;
			margin-top: 20px;
		}
	</style>
</head>
<body>
	<h1>Click on the Sapo Clicker Image</h1>
	<img src="https://i.imgur.com/dvA8RQi.jpeg" alt="Sapo Clicker" id="frog-image" style="cursor:pointer;">
	<div id="clicks">SapoCoins: 0</div>
	<div id="shop">
		<h2>Loja</h2>
		<p>Comprar Sapo Clicker: 15 SapoCoins</p>
		<button id="autoclicker">Comprar Sapo Clicker</button>
	</div>

	<script>
		var sapocoins = 0;
		var autoclicker = false;

		document.getElementById("frog-image").addEventListener("click", function() {
			if (autoclicker) {
				document.getElementById("frog-image").click();
			}
			else {
				sapocoins++;
				updateClicks();
			}
		});

		document.getElementById("autoclicker").addEventListener("click", function() {
			if (sapocoins >= 15 && !autoclicker) {
				sapocoins -= 15;
				autoclicker = true;
				document.getElementById("autoclicker").innerHTML = "Sapo Clicker (Ativado)";
				updateClicks();
				setInterval(function() {
					document.getElementById("frog-image").click();
				}, 1000);
			}
		});

		function updateClicks() {
			document.getElementById("clicks").innerHTML = "SapoCoins: " + sapocoins;
		}
	</script>
</body>
</html>
